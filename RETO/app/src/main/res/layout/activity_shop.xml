<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2B2B">

    <LinearLayout
        android:id="@+id/topNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#333333"
        android:padding="8dp"
        android:gravity="center_vertical">

        <!-- Botón de Ayuda a la izquierda -->
        <Button
            android:id="@+id/btnAyuda"
            android:layout_width="106dp"
            android:layout_height="56dp"
            android:backgroundTint="#6A6868"
            android:text="@string/ayuda_button"
        android:textColor="#FFFFFF"
        android:gravity="center" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- Botón de Logout a la derecha -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="106dp"
            android:layout_height="56dp"
            android:backgroundTint="#6A6868"
            android:text="@string/logout_button"
            android:textColor="#FFFFFF"
            android:textColorLink="#454545"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewJuegos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:layout_above="@+id/bottomNavigationBar"
        android:layout_below="@id/topNavigationBar" />

    <LinearLayout
        android:id="@+id/bottomNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#333333"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btnPerfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_perfil"
                app:tint="#FFFFFF" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/perfil_button"
                android:textSize="12sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnBiblioteca"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_biblioteca"
                app:tint="#FFFFFF" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/biblioteca_button"
                android:textSize="12sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnTienda"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#444444">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_tienda"
                app:tint="#FFFFFF" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tienda_button"
                android:textSize="12sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
